<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/textview_bg_drawable">

    <LinearLayout
        android:id="@+id/search_detail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/search_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="名字"/>
            <TextView
                android:id="@+id/search_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="名字"/>

        </LinearLayout>
        <TextView
            android:id="@+id/detail"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="详情"
            android:textColor="#00CDCD"
            android:clickable="true"
            android:drawableRight="@drawable/channel_right_hl"
            android:drawablePadding="-40dp"
            android:gravity="center"
            android:paddingRight="25dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CDC8B1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_nearby"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="搜周边"
            android:textSize="10sp"
            android:drawableLeft="@drawable/tips_nearby"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:clickable="true"/>

        <TextView
            android:id="@+id/search_route"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="去这里"
            android:textSize="10sp"
            android:drawableLeft="@drawable/tips_route"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:clickable="true"/>

        <TextView
            android:id="@+id/search_navi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="导航"
            android:textSize="10sp"
            android:drawableLeft="@drawable/tips_navi"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:clickable="true"/>
    </LinearLayout>
</LinearLayout>