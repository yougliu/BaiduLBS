<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/food"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="美食"
            android:clickable="true"
            android:drawableTop="@drawable/food"
            android:gravity="center"/>

        <TextView
            android:id="@+id/hotel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="酒店"
            android:clickable="true"
            android:drawableTop="@drawable/hotel"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="公交站"
            android:clickable="true"
            android:drawableTop="@drawable/bus"
            android:gravity="center"/>

        <TextView
            android:id="@+id/park"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="停车点"
            android:clickable="true"
            android:drawableTop="@drawable/park"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="电影"
            android:clickable="true"
            android:drawableTop="@drawable/movie"
            android:gravity="center"/>

        <TextView
            android:id="@+id/beauty"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="美容"
            android:clickable="true"
            android:drawableTop="@drawable/beauty"
            android:gravity="center"/>

        <TextView
            android:id="@+id/shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="商场"
            android:clickable="true"
            android:drawableTop="@drawable/shopping"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tilet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="卫生间"
            android:clickable="true"
            android:drawableTop="@drawable/tilet"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>