<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textview_bg_drawable"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tips_nearby"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:text="附近"
        android:clickable="true"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/tips_nearby_new"
        android:drawablePadding="5dp"
        />

    <TextView
        android:id="@+id/tips_route"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="路线"
        android:clickable="true"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/tips_route_new"
        android:drawablePadding="5dp"
        />

    <TextView
        android:id="@+id/tips_navi"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="导航"
        android:clickable="true"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/tips_navi_new"
        android:drawablePadding="5dp"
        />

    <TextView
        android:id="@+id/tips_more"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="更多"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/tips_more"
        />


</LinearLayout>